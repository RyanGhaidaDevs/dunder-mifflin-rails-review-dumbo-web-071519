
<% if flash[:errors] %>
    <% flash[:errors].each do |error|%>
    <marquee style="color:red;"> <%= error%> </marquee>
    <% end %>
<% end %>



<%= form_for @employee do |f| %>
<%=f.label :first_name %>
<%=f.text_field :first_name%>
<%=f.label :last_name %>
<%=f.text_field :last_name %>
<%=f.label :title %>
<%=f.text_field :title%>
<%=f.label :office %>
<%=f.text_field :office%>
<%=f.label :alias %>
<%=f.text_field :alias%>
<%=f.label :img_url %>
<%=f.text_field :img_url%>
<%=f.label :dog_id, "Select your pupper" %> 
<%=f.collection_select :dog_id, @dogs, :id, :name%>
<%= f.submit%>
<% end %>